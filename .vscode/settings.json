{
    "editor.fontSize": 13,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "git.confirmSync": false,
    "git.autofetch": true,
    "code-runner.executorMapByFileExtension": {
        ".apl": "docker run -v /workspaces/APL-codespace:/workspaces/APL-codespace --entrypoint dyalogscript dyalog/dyalog"
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.enableAppInsights": false,
    "code-runner.ignoreSelection": false,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.showRunCommandInEditorContextMenu": false,
    "code-runner.showRunCommandInExplorerContextMenu": false,
    "code-runner.showExecutionMessage": false,
    "generic-input-methods.input-methods": [
        {
            "languages": [
                "apl"
            ],
            "triggers": [
                "\\"
            ],
            "dictionary": [
                { "label": "<- assign", "body": "←", "description": "\tEXAMPLE\nB←A\n\tMEANING\nSets values and shape of B to match A"}
                { "label": "+ conjugate plus", "body": "+", "description": "Add\n\tA+B\nSum of A and B"}
                { "label": "⍵", "body": "⍵", "description": "⊪"}
            ]
        }
    ]
}